<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="35dp"
                    android:id="@+id/layout1">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/titleLayout">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/titleEt"
                            android:hint="제목"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/commentLayout"
                        android:layout_below="@+id/titleLayout"
                        android:layout_marginTop="20dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/commentEt"
                            android:hint="코멘트"/>

                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imgText"
                        android:text="이미지"
                        android:layout_marginTop="25dp"
                        android:layout_below="@+id/commentLayout"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgText"
                        android:adjustViewBounds="true"
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/img_back"
                        android:id="@+id/sampleIv"/>

                    <Button style="@style/Base.Widget.AppCompat.Button.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/sampleIv"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="50dp"
                        android:text="UPLOAD"
                        android:layout_marginLeft="20dp"
                        android:padding="20dp"
                        android:id="@+id/uploadBtn"/>

                    <Button style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CANCEL"
                        android:padding="20dp"
                        android:layout_marginTop="50dp"
                        android:layout_below="@+id/sampleIv"
                        android:layout_toLeftOf="@+id/uploadBtn"
                        android:id="@+id/cancelBtn"/>
                </RelativeLayout>

            </ScrollView>

</layout>
